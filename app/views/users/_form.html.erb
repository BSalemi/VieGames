<% if @user.errors.any? %>
   <div id="error_explanation">
      <h2> 
         <%= pluralize(@user.errors.count, "error") %>
         prohibited this user from being saved:
      </h2>

      <ul> 
        <% @user.errors.full_messages.each do |msg| %>
            <li> <%= msg %> </li>
        <% end %>
     </ul>
    </div>
    <% end %>

<%= form_for(@user) do |f| %>
    <b>Username:</b> <%= f.text_field :username %></br>
    <b>Email:</b> <%= f.text_field :email %></br>
    <b>Password:</b> <%= f.password_field :password %></br>
    <b>Confirm Password:</b> <%= f.password_field :password_confirmation %></br>
    <%= f.submit %>
    <% end %> 